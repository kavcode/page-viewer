{
  "type": "project",
  "license": "proprietary",
  "require": {
    "php": "^8.1",
    "ext-pdo": "*"
  },
  "require-dev": {
    "codeception/codeception": "^5.0",
    "codeception/module-asserts": "^3.0",
    "codeception/module-phpbrowser": "^3.0",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },

  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\Unit\\": "tests/unit/"
    }
  }
}
